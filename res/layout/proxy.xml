<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="거리: "
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textColor="#ff000000"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:id="@+id/sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="떨어짐"
            android:textColor="#ff000000"/>
        <CheckBox
            android:id="@+id/vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인식되면 진동"
            android:textColor="#ff000000"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/proxy_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근접센서는 위의 사진 처럼 휴대폰 앞면의 셀프카메라 옆에 있는 까만색 두 점입니다.
이 센서를 손가락 등으로 가리면 인식됩니다.
근접센서는 센서앞에 물체가 있는지 없는지 판단해서 전화를 밭을때 휴대폰이 얼굴 옆에 있는지 감지해 화면을 끄기도 합니다.
단위는 cm를 쓰지만 정확하지는 않습니다. 단지 물체 존재 확인용일뿐."
        android:textColor="#ff000000"/>

</LinearLayout>